syntax on
filetype on
set hlsearch
filetype plugin indent on
" On pressing tab, insert 2 spaces
set expandtab
" show existing tab with 2 spaces width
set tabstop=4
set softtabstop=4
" when indenting with '>', use 2 spaces width
set shiftwidth=4
set number
set autowrite
set ruler
set scrolloff=7
set noswapfile
colorscheme delek
set clipboard=unnamed
